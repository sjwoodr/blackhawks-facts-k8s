apiVersion: v1
kind: Service
metadata:
  labels:
    app: blackhawks-facts-development
    app.kubernetes.io/name: blackhawks-facts
  name: blackhawks-facts-development
  namespace: development
spec:
  ports:
  - appProtocol: HTTP
    name: http
    port: 80
    protocol: TCP
    targetPort: http
  selector:
    app: blackhawks-facts-development
    app.kubernetes.io/name: blackhawks-facts
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: blackhawks-facts-development
    app.kubernetes.io/name: blackhawks-facts
  name: blackhawks-facts-development
  namespace: development
spec:
  replicas: 2
  selector:
    matchLabels:
      app: blackhawks-facts-development
      app.kubernetes.io/name: blackhawks-facts
  template:
    metadata:
      labels:
        app: blackhawks-facts-development
        app.kubernetes.io/name: blackhawks-facts
    spec:
      containers:
      - image: sjwoodr/blackhawks-facts:latest
        name: blackhawks-facts
        ports:
        - containerPort: 5000
          name: http
---
apiVersion: networking.istio.io/v1beta1
kind: VirtualService
metadata:
  labels:
    app: blackhawks-facts-development
  name: blackhawks-facts-development
  namespace: istio-system
spec:
  gateways:
  - gateway
  hosts:
  - blackhawks-facts-dev.n9oh.com
  http:
  - route:
    - destination:
        host: blackhawks-facts-dev.development.svc.cluster.local
        port:
          number: 80
